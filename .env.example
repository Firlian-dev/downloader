# Environment variables for the Telegram Downloader Bot
# Copy this file to .env and fill in your values

# Telegram Bot Token (required)
# Get it from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Bot Username (optional)
TELEGRAM_BOT_USERNAME=downloader_bot

# Path to yt-dlp binary (default: /usr/local/bin/yt-dlp)
YTDLP_BIN=/usr/local/bin/yt-dlp

# Directory for downloaded files (default: /tmp/downloads)
DOWNLOAD_DIR=/tmp/downloads

# Cache time-to-live in hours (default: 24)
CACHE_TTL_HOURS=24

# File size limit in MB for direct upload (default: 50)
SIZE_LIMIT_MB=50
